class Solution {
public:
    double findMedianSortedArrays(vector<int>& nums1, vector<int>& nums2) {

        vector<int> mergearr ;
        for (int i=0;i<nums1.size();i++)
        {
            mergearr.push_back(nums1[i]);
        }
        for(int i=0;i<nums2.size();i++)
        {
            mergearr.push_back(nums2[i]);
        }
        sort(mergearr.begin(),mergearr.end());
        int m=mergearr.size();
        return m%2!=0? mergearr[m/2]:static_cast<double>(mergearr[m/2-1]+mergearr[(m/2)])/2;
    }
};
